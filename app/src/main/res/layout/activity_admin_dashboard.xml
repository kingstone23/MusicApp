<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Khối lời chào và nút chức năng -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvWelcome"
            android:text="Xin chào Admin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAddSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm bài hát mới"
            android:layout_marginTop="12dp" />
        <Button
            android:id="@+id/btnUpdateSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật bài hát"
            android:layout_marginTop="12dp" />


        <Button
            android:id="@+id/btnDeleteUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xoá người dùng"
            android:layout_marginTop="12dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvSelectionPrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vui lòng chọn một bài hát từ danh sách để cập nhật."
        android:textColor="@color/design_default_color_primary"
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />
    <!-- RecyclerView hiển thị danh sách bài hát -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAllSongs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_song"
        app:layout_constraintTop_toBottomOf="@id/layoutButtons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>